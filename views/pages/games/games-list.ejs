<%- include('../../fragments/header.ejs') %>
<main>
    <h2>Lista gier</h2>
    <table class="table-list">
        <thead>
        <tr>
            <th>Nazwa</th>
            <th>Kod licencji</th>
            <th>Ograniczenie wiekowe</th>
            <th>Akcje</th>
        </tr>
        </thead>
        <tbody>
        <% for (let game of games) { %>
            <tr>
                <td><%= game.gameName %></td>
                <td><%= game.licenceCode %></td>
                <td><%= game.ageRestriction == true ? 'TAK' : 'NIE'%></td>
                <td>
                    <ul class="list-actions">
                        <li>
                            <a href="games-list/details/<%=game._id%>" class="list-actions-button-details">Szczegóły</a>
                        </li>
                        <li>
                            <a href="games-list/modify/<%=game._id%>" class="list-actions-button-edit">Edytuj</a>
                        </li>
                        <li>
                            <a href="games-list/delete/<%=game._id%>" class="list-actions-button-delete">Usuń</a>
                        </li>
                    </ul>
                </td>

            </tr>
        <% } %>
        </tbody>
    </table>
    <div class="form-buttons">
        <p><a href="games-list/add" class="button-add">Dodaj nową grę</a></p>
    </div>
</main>
<%- include('../../fragments/footer.ejs') %>