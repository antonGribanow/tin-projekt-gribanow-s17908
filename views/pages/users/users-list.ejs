<%- include('../../fragments/header.ejs') %>
<main>
    <h2>Lista użytkowników</h2>
    <table class="table-list">
        <thead>
        <tr>
            <th>Imię użytkownika</th>
            <th>Nazwisko użytkownika</th>
            <th>Subskrypcja premium</th>
            <th>adres email</th>
            <th>Data urodzenia</th>
            <th>Akcje</th>
        </tr>
        </thead>
        <tbody>
        <% for (let user of users) { %>
        <tr>
            <td><%= user.userName%></td>
            <td><%= user.userSurname%></td>
            <td><%= user.premiumSub == true ? 'TAK' : 'NIE'%></td>
            <td><%= user.emailAddress%></td>
            <td><%= user.userBirthDate.toISOString().split('T')[0]%></td>
            <td>
                <ul class="list-actions">
                    <li>
                        <a href="users-list/details/<%=user._id%>" class="list-actions-button-details">Szczegóły</a>
                    </li>
                    <li>
                        <a href="users-list/modify/<%=user._id%>" class="list-actions-button-edit">Edytuj</a>
                    </li>
                    <li>
                        <a href="users-list/delete/<%=user._id%>" class="list-actions-button-delete">Usuń</a>
                    </li>
                </ul>
            </td>
        </tr>
        <% } %>
        </tbody>
    </table>
    <div class="form-buttons">
        <p><a href="users-list/add" class="button-add">Dodaj nowego użytkownika</a></p>
    </div>

</main>
<%- include('../../fragments/footer.ejs') %>